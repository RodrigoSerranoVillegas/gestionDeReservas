extends layout

block content
  .auth-container
    .auth-card
      h1.auth-title Inicia sesión
      p.auth-subtitle Accede a tu cuenta de reservas
      
      if error
        .error #{error}
      
      form.auth-form(method="POST" action="/login")
        .form-group
          label.form-label(for="email") Correo electrónico
          input.form-input(
            type="email"
            id="email"
            name="email"
            placeholder="tu@email.com"
            value=(form && form.email) || ''
            required
          )
        
        .form-group
          label.form-label(for="password") Contraseña
          input.form-input(
            type="password"
            id="password"
            name="password"
            placeholder="Tu Contraseña"
            required
          )
        
        .form-group.remember-group
          input.form-checkbox(
            type="checkbox"
            id="remember"
            name="remember"
          )
          label.form-checkbox-label(for="remember") Recuérdame
        
        button.btn.btn-primary(type="submit") Iniciar sesión
      
      p.auth-footer
        a(href="/forgot-password") ¿Olvidaste tu contraseña?
        br
        | ¿No tienes cuenta? 
        a(href="/registro") Regístrate aquí
