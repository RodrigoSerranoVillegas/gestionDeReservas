extends layout

block content
  .auth-container
    .auth-card
      h1.auth-title Restablecer Contraseña
      p.auth-subtitle Ingresa tu nueva contraseña
      
      if error
        .error #{error}
      
      if success
        .success #{success}
        if !token
          p.auth-footer
            a.btn.btn-primary(href='/login', style="color: white !important;") Ir a iniciar sesión
      
      if token
        form.auth-form(method="POST" action=`/reset-password/${token}`)
          .form-group
            label.form-label(for="password") Nueva Contraseña
            input.form-input(
              type="password"
              id="password"
              name="password"
              placeholder="Mínimo 6 caracteres"
              required
              minlength="6"
              autofocus
            )
          
          .form-group
            label.form-label(for="confirmPassword") Confirmar Nueva Contraseña
            input.form-input(
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              placeholder="Repite la contraseña"
              required
              minlength="6"
            )
          
          button.btn.btn-primary(type="submit") Restablecer Contraseña
      
      p.auth-footer
        | ¿Recordaste tu contraseña? 
        a(href="/login") Inicia sesión aquí
