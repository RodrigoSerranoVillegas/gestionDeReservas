extends layout

block content
  h1 Reservas registradas
  if !reservas || reservas.length === 0
    p No hay reservas todavía.
  else
    table(border="1", cellpadding="6")
      thead
        tr
          th Código
          th Fecha
          th Hora
          th Cliente
          th Personas
          th Estado
          th Canal
      tbody
        each r in reservas
          tr
            td #{r.id_reserva}
            td #{r.fecha_reserva}
            td #{r.hora_inicio}
            td #{r.cliente_nombre}
            td #{r.numero_personas}
            td #{r.estado}
            td #{r.canal}
