extends layout

block styles
  link(rel="stylesheet" href="/inicio.css")

block content
  .reservas-container
    h1.reservas-title Reservas registradas
    if !reservas || reservas.length === 0
      p No hay reservas todavía.
    else
      .reservas-card
        table.reservas-table
          thead
            tr
              th Código
              th Fecha
              th Hora
              th Cliente
              th Personas
              th Estado
              th Canal
          tbody
            each r in reservas
              tr
                td #{r.id_reserva}
                td #{r.fecha_reserva}
                td #{r.hora_inicio}
                td #{r.cliente_nombre}
                td #{r.numero_personas}
                td #{r.estado}
                td #{r.canal}
